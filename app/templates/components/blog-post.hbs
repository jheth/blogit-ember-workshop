<div class="main">
  {{#if isEditing}}
    <h2>{{input value=post.title}}</h2>
    <p>{{textarea value=post.body rows="5" cols="45"}}</p>
  {{else}}
    <h2>{{post.title}}</h2>
    <p>{{post.body}}</p>
  {{/if}}
</div>

{{#if isEditing}}
  <button {{action 'save'}}>Save</button>
  {{#if post.isDirty}}
    {{fa-icon "save"}}
  {{/if}}
{{else}}

  {{#unless post.isPublished}}
    <button {{action 'edit'}}>{{fa-icon "edit"}}</button>
  {{/unless}}

  <button {{action 'delete'}}>{{fa-icon "trash"}}</button>

  {{#if post.isPublished}}
    <strong>Published {{ago post.publishedDate}}</strong>
  {{else}}
    <button {{action 'publish'}}>Publish</button>
  {{/if}}

{{/if}}